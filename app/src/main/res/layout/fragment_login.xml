<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/login_login_title_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:text="로그인"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/login_email_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/login_login_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/login_login_title_tv"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/login_email_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:hint="예) abc@gmail.com"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:background="@color/gray_color"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/login_email_title_tv"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/login_pw_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/login_email_tv"
        app:layout_constraintTop_toBottomOf="@+id/login_email_tv"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/login_pw_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:hint="영문, 숫자 조합 8~16자리"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@color/gray_color"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/login_pw_title_tv"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/login_with_apple_id_iv"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:background="@color/gray_color"
        app:layout_constraintBottom_toTopOf="@id/login_with_email_tv"
        app:layout_constraintStart_toStartOf="@+id/login_email_tv"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/login_with_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 회원이 아니신가요? 회원가입"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>